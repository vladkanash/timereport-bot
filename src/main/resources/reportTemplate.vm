#set($zeroHours = '0h')

<html lang="en">
<head>
    <style>
        table td {
            border: 1px solid black;
            text-align: center;
            padding: 5px;
        }

        html * {
            font-weight: bold;
            font-size: 16px;
            color: #000 !important;
            font-family: Arial, serif !important;
        }

        td.user-name {
            font-weight: normal;
        }

        td.week-day {
            font-weight: normal;
            font-size: 15px;
        }

        td {
            font-size: 20px;
        }

        td.submitted-8h {
            font-size: 20px;
            background-color: #00ff7f;
        }

        .submitted-0h {
            background-color: #f08080;
        }

    </style>
    <title>
        Time Report
    </title>
</head>
<body>
<table>
    <thead>
    <tr>
        <td rowspan="2" colspan="2">
            User
        </td>
        <td colspan="7">
            ${context.currentMonth}
        </td>
        <td rowspan="2">
            Total Hours
        </td>
    </tr>
    <tr>
        #foreach($day in ${context.weekDays})
            <td class="week-day">$day</td>
        #end
    </tr>
    </thead>
    <tbody>
        #foreach($user in ${context.userWorklogs})
        <tr>
            <td>
                <img src="${user.avatarUrl}" alt="user avatar">
            </td>
            <td class="user-name">${user.name}</td>
            #foreach($day in ${context.weekDays})
                #if(${user.submittedTime.get($day)})
                    #set($submittedHours = ${user.submittedTime.get($day)})
                    <td class="submitted-$submittedHours">
                        $submittedHours
                    </td>
                #else
                    <td class="submitted-0h">
                        $zeroHours
                    </td>
                #end
            #end
            #if($user.totalTime)
                <td>$user.totalTime</td>
            #else
                <td>$zeroHours</td>
            #end
        </tr>
        #end
    </tbody>
</table>
</body>
</html>